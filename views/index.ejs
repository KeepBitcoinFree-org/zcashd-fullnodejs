										<% } %> 
											</div>
										</div>
										
											<div class="row1">
											<div class="column1">
												<b>Transparent Balance</b>: 
											</div>
											</div>
										
										<div class="row1">
										<div class="column2">
											<%= wallet.balance %> <% if(wallet.balance > 0 && zUsd){ %> 
											ZEC ($<%= us.format((wallet.balance * zUsd).toFixed(2)) %>)
											<% } %> 
										</div>
										</div>
										
										
											<div class="row1">
											<div class="column1">
												<b>Unconfirmed T Balance</b>: 
											</div>
											</div>
										
										<div class="row1">
										<div class="column2">
											<%= wallet.unconfirmed_balance %> <% if(wallet.unconfirmed_balance > 0 && zUsd){ %> 
											ZEC $<%= us.format((wallet.unconfirmed_balance * zUsd).toFixed(2)) %>)
											<% } %> 
										</div>
										</div>
										
										
											<div class="row1">
											<div class="column1">
												<b>Tx Count</b>: 
											</div>
											</div>
										
										<div class="row1">
										<div class="column2">
											<%= us.format(wallet.txcount.toFixed(0)) %> 
										</div>
										</div>
										
										
																					<div class="row1">
											<div class="column1">
												<b>Wallet Version</b>: 
											</div>
											</div>
										
										<div class="row1">
										<div class="column2">
											<%= wallet.walletversion %>
										</div>
										</div>
										
										<% }else{ %>
